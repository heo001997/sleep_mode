{
  "name": "sleep_mode_frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:prod": "./scripts/build-production.sh",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/manifest.json",
    "build:clean": "rm -rf dist && rm -rf node_modules/.vite",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "preview:prod": "npm run build:prod && vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage --watch",
    "test:coverage:ui": "vitest --coverage --ui",
    "test:coverage:open": "npm run test:coverage && open coverage/index.html",
    "test:coverage:threshold": "vitest run --coverage --reporter=verbose",
    "coverage:report": "node scripts/coverage-report.js",
    "coverage:badges": "node scripts/generate-badges.js",
    "coverage:merge": "nyc merge coverage .nyc_output/coverage.json",
    "coverage:clean": "rimraf coverage .nyc_output",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "test:all": "npm run test:run && npm run test:e2e",
    "test:all:coverage": "npm run test:coverage && npm run test:e2e",
    "quality:check": "npm run lint && npm run test:coverage:threshold && npm run test:e2e",
    "ci:test": "npm run test:run -- --reporter=junit --outputFile=test-results/unit-results.xml",
    "ci:coverage": "npm run test:coverage -- --reporter=junit --outputFile=test-results/coverage-results.xml",
    "ci:e2e": "npm run test:e2e -- --reporter=junit --outputFile=test-results/e2e-results.xml",
    "cdn:deploy": "./scripts/cdn-deploy.sh",
    "cdn:analyze": "npm run build && node scripts/analyze-assets.js"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@heroicons/react": "^2.2.0",
    "@tanstack/react-query": "^5.80.7",
    "axios": "^1.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "vitest-canvas-mock": "^0.3.3"
  }
}
