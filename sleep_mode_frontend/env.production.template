# Production Environment Configuration Template for Sleep Mode Frontend
# Copy this file to .env.production for production deployment

# Application Configuration
VITE_APP_NAME=Sleep Mode
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Sleep Mode - Smart Sleep Tracking Application

# API Configuration
VITE_API_URL=https://api.sleepmode.app
VITE_API_VERSION=v1
VITE_API_TIMEOUT=10000

# Frontend Configuration
VITE_FRONTEND_URL=https://app.sleepmode.app
VITE_PUBLIC_PATH=/

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true

# Debug Configuration
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=warn

# CDN Configuration
VITE_CDN_URL=https://cdn.sleepmode.app
VITE_ASSETS_CDN=https://assets.sleepmode.app

# Analytics Configuration
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
VITE_MIXPANEL_TOKEN=your_mixpanel_token_here
VITE_HOTJAR_ID=your_hotjar_id_here

# Error Reporting
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_SENTRY_ENVIRONMENT=production

# Social Login
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here
VITE_APPLE_CLIENT_ID=your_apple_client_id_here

# WebSocket Configuration
VITE_WS_URL=wss://ws.sleepmode.app
VITE_WS_RECONNECT_INTERVAL=5000

# Cache Configuration
VITE_CACHE_VERSION=1.0.0
VITE_SW_CACHE_NAME=sleep-mode-cache-v1

# Security Configuration
VITE_CSP_NONCE=generate_random_nonce_here
VITE_CSRF_TOKEN_NAME=_csrf_token

# Performance Configuration
VITE_LAZY_LOADING=true
VITE_PREFETCH_CHUNKS=true
VITE_PRELOAD_CRITICAL=true

# Build Configuration
VITE_BUILD_ANALYZE=false
VITE_BUILD_GZIP=true
VITE_BUILD_BROTLI=true 